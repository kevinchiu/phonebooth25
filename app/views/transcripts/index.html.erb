<% @transcripts.each do |transcript| %>
  <tr>
    <td><%= transcript.phone %></td>
    <td><%= transcript.question %></td>
    <td><%= transcript.body %></td>
    <td><%= link_to 'Show', transcript %></td>
    <td><%= link_to 'Edit', edit_transcript_path(transcript) %></td>
    <td><%= link_to 'Destroy', transcript, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

